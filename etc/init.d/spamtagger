#! /bin/sh
### BEGIN INIT INFO
# Provides:          spamtagger
# Required-Start:    $remote_fs $syslog
# Required-Stop:     $remote_fs $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Start all SpamTagger services
# Description:       SpamTagger
### END INIT INFO

APACHE_RESTART=1
if [ ! -z $2 ]; then
    if [ "$2" = "no-apache" ]; then
       APACHE_RESTART=0
    fi
fi

SRCDIR=`grep 'SRCDIR' /etc/spamtagger.conf | cut -d ' ' -f3`
if [ "$SRCDIR" = "" ]; then
  SRCDIR=/usr/spamtagger
fi
VARDIR=`grep 'VARDIR' /etc/spamtagger.conf | cut -d ' ' -f3`
if [ "$VARDIR" = "" ]; then
  VARDIR=/var/spamtagger
fi
ISMASTER=`grep 'ISMASTER' /etc/spamtagger.conf | cut -d ' ' -f3`

NAME=spamtagger
FW=firewall
EXIM1=exim_stage1
EXIM2=exim_stage2
EXIM4=exim_stage4
MS=mailscanner
MYSLAVE=mysql_slave
MYMASTER=mysql_master
APACHE=apache
SNMP=snmpd
GREYLISTD=greylistd
PREFDAEMON=prefdaemon
PREFTDAEMON=preftdaemon
SPAMLOGGER=spamloggerdaemon
STATSDAEMON=statsdaemon

INITDIR=$SRCDIR/etc/init.d

test -x $DAEMON || exit 0

case "$1" in
  start)
    echo "Starting $NAME: "

    EDITION=`cat $SRCDIR/etc/edition.def`
    VERSION=`cat $SRCDIR/etc/spamtagger/version.def`
    echo "SpamTagger $EDITION $VERSION (kernel \\\r on \\\m, \\\l)\n" > /etc/issue

    ## checking for tmpfs dir
    DF=`df | grep '/spool/tmp'`
    if [ "$DF" = "" ]; then
      echo -n "  Creating tmpfs partition... "
      mount -t tmpfs tmpfs $VARDIR/spool/tmp >/dev/null 2>&1
      echo "done"
    fi

    ## checking for opt binaries
    for i in mysql4 mysql5 MailScanner bogofilter clamav exim4 spamtagger php5; do
     if [ ! -d /opt/$i ]; then
      ln -s /usr/$i /opt/$i >/dev/null 2>&1
     fi
    done
    if [ ! -d /opt/apache2 ]; then
      ln -s /usr/apache /opt/apache2 >/dev/null 2>&1
    fi

    $INITDIR/$MYMASTER start
    $INITDIR/$MYSLAVE start
    # Restart FW in background so that Fail2Ban does not hold up other processes
    $INITDIR/$FW restart &
    sleep 5

    echo -n "  Resyncing DB... "
    $INITDIR/$MYSLAVE restart 2>&1 > /dev/null
    echo "done."
    $INITDIR/$SNMP start
    $INITDIR/$STATSDAEMON start
    $INITDIR/$PREFTDAEMON start
    $INITDIR/$MS start
    $INITDIR/$EXIM4 start
    $INITDIR/$EXIM2 start
    $INITDIR/$EXIM1 start
    $INITDIR/$GREYLISTD start
    if [ $APACHE_RESTART -eq 1 ]; then
        $INITDIR/$APACHE start
    fi

    FIRSTUPDATE_LOG="${VARDIR}/log/spamtagger/first-start.log"
    FIRSTUPDATE_FLAG_DIR="${VARDIR}/run/configurator"
    FIRSTUPDATE_FLAG_RAN="${FIRSTUPDATE_FLAG_DIR}/updater4st-ran"
    FIRSTUPDATE_FLAG_RUNNING="${FIRSTUPDATE_FLAG_DIR}/updater4st-running"

    if [ ! -f "${FIRSTUPDATE_FLAG_RAN}" ]; then
        if [ ! -f "${FIRSTUPDATE_FLAG_RUNNING}" ]; then
            echo "Needs update" >> ${FIRSTUPDATE_LOG}
            ping -c 1 cvs.spamtagger.org > /dev/null
            net_status=$?
            if [ ${net_status} -eq 0 ]; then
                touch ${FIRSTUPDATE_FLAG_RUNNING}
                echo "Updating..." >> ${FIRSTUPDATE_LOG}
                mkdir -p ${FIRSTUPDATE_FLAG_DIR}
                /root/Updater4ST/updater4mc.sh || rm -f ${FIRSTUPDATE_FLAG_RUNNING}  # If error during upgrade, it will try again every time
                ${SRCDIR}/bin/internal_access --generate --propagate --install &>> ${FIRSTUPDATE_LOG}
                touch ${FIRSTUPDATE_FLAG_RAN}
                echo "Finished update" >> ${FIRSTUPDATE_LOG}
                rm -f ${FIRSTUPDATE_FLAG_RUNNING}
            else
                echo "WARNING: SpamTagger has not been updated on first launch." >> ${FIRSTUPDATE_LOG}
                echo "Ensure you have a running connection and restart SpamTagger." >> ${FIRSTUPDATE_LOG}
            fi
        fi
    fi
    # Wait in case Fail2Ban is still starting
    wait
     ;;
  stop)
    if [ ! -z "$(find $VARDIR/run/ -name *.rs)" ]; then
        rm $VARDIR/run/*.rs
    fi
    echo "Stopping $NAME: "
    if [ $APACHE_RESTART -eq 1 ]; then
       $INITDIR/$APACHE stop
    fi
    $INITDIR/$EXIM1 stop
    $INITDIR/$EXIM2 stop
    $INITDIR/$EXIM4 stop
    $INITDIR/$MS stop
    $INITDIR/$SNMP stop
    $INITDIR/$GREYLISTD stop
    $INITDIR/$STATSDAEMON stop
    $INITDIR/$PREFTDAEMON stop
    $INITDIR/$SPAMLOGGER stop
    $INITDIR/$MYSLAVE stop
    $INITDIR/$MYMASTER stop
      ;;
  restart)
	$0 stop $2
	sleep 4
	$0 start $2
    ;;

  *)
    echo "Usage: /etc/init.d/$NAME {start|stop|restart}"
    exit 1
    ;;
esac

exit 0
