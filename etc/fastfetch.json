{
    "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
    "logo": {
	"source" : "/usr/spamtagger/etc/fastfetch.ascii"
    },
    "modules": [
        "title",
        "separator",
	{
            "type": "host",
	    "key": "Hostname"
	},
        "os",
        "kernel",
        "uptime",
        "loadavg",
	{
	    "type": "command",
	    "key": "SpamTagger Services",
	    "text": "/usr/spamtagger/bin/get_status.pl -s | cut -b 2-"
	},
	{
	    "type": "command",
	    "key": "SpamTagger Queues",
	    "text": "/usr/spamtagger/bin/get_status.pl -p | cut -b 2-"
	},
        {
            "type": "cpu",
            "showPeCoreCount": true,
            "temp": true
        },
        {
            "type": "gpu",
            "driverSpecific": true,
            "temp": true
        },
        "memory",
        "physicalmemory",
        "swap",
	{
	    "type": "disk",
	    "folders": "/:/var"
	},
        {
            "type": "publicip",
            "timeout": 1000
        },
        {
            "type": "localip",
            "showIpv6": true,
            "showAllIps": true
        },
        "dns",
        "netio",
        "diskio"
    ]
}
